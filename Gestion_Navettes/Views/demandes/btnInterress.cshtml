@model Gestion_Navettes.Models.demande

@{
    ViewBag.Title = "s'Interress";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 mx-auto">
                <div class="cta-inner bg-faded rounded">
                    <h2 class="text-center mb-md-5">Vous voulez vraiment s'interesser à cette demande ?</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.id, "id demande", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.DropDownList("id", null, htmlAttributes: new { @class = "form-control", disabled="disabled" })
                            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="S'interess" class="btn btn-danger my-3" /> |
                            @Html.ActionLink("Back to List", "voirTout")
                        </div>
                    </div>
                </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>



