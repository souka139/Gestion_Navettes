@{
    Layout = "";
}

@model Gestion_Navettes.Models.userRole

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Connexion</title>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&amp;display=swap" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Background Video-->
    <video class="bg-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop"><source src="/assets/mp4/bg.mp4" type="video/mp4" /></video>
    <!-- Masthead-->
    <div class="masthead">
        <div class="masthead-content text-white">
            <div class="container-fluid px-4 px-lg-0">
                <h1 class="fst-italic lh-1 mb-4">Se Connecter</h1>
                @if (ViewBag.nonTrouve != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.nonTrouve
                    </div>
                }
                @if (@TempData["msg"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["msg"]
                    </div>
                }
                <form action="" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Login</label>
                        @Html.TextBoxFor(s => s.login, new { placeholder = "Enter login", Class = "form-control my-2" })
                        <div class=" alert-danger">
                            @Html.ValidationMessageFor(s => s.login)
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Mot de passe</label>
                        @Html.TextBoxFor(s => s.mdp, new { placeholder = "Enter password", type = "password", Class = "form-control my-2" })
                        <div class=" alert-danger">
                            @Html.ValidationMessageFor(s => s.mdp)
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="usertype">Société</label>
                        @Html.RadioButtonFor(s => s.usertype, 1, new { Class = "radio my-2", Checked = "chcecked" })
                        <label for="usertype">Abonné</label>
                        @Html.RadioButtonFor(s => s.usertype, 2, new { Class = "radio my-2" })
                        <label for="usertype">Admin</label>
                        @Html.RadioButtonFor(s => s.usertype, 3, new { Class = "radio my-2" })

                    </div>

                    <div class="form-group">
                        <input class=" btn btn-danger my-2" type="submit" name="name" value="Se connecter" />
                    </div>
                </form>

                <div>
                    <label class="my-2">Create your account :</label> @Html.ActionLink("societé", "Societe") @Html.ActionLink("abonner", "Abonner")

                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
