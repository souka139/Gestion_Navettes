@model IEnumerable<Gestion_Navettes.Models.autocar>

@{
    ViewBag.Title = "Index";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner bg-faded rounded">
                    @if (@TempData["msg"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["msg"]
                        </div>
                    }
                    <p>
                        @Html.ActionLink("Create New", "Create", "autocars", null, new { Class = "btn btn-success" })
                    </p>
                    <table class="table table-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.clim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.capacite)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.societe.nom)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.clim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.capacite)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.societe.nom)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                </div>
            </div>
        </div>
</section>




