@{
    Layout = "";
}

@model Gestion_Navettes.Models.abonne

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>inscrition abonner</title>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Tinos:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&amp;display=swap" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Background Video-->
    <video class="bg-video" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop"><source src="/assets/mp4/bg.mp4" type="video/mp4" /></video>
    <!-- Masthead-->
    <div class="masthead">
        <div class="masthead-content text-white">
            <div class="container-fluid px-4 px-lg-0">
                <h1 class="fst-italic mb-4">Abonner Register</h1>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Nom complet</label>
                                @Html.EditorFor(model => model.nom_complet, new { htmlAttributes = new { Class = "form-control my-2",placeholder="Entrer votre nom complet" } })
                            <div class=" alert-danger">
                                @Html.ValidationMessageFor(model => model.nom_complet)
                            </div>    
                        </div>

                        <div class="form-group">
                           <label>Email</label>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { Class = "form-control my-2", placeholder = "Entrer votre email" } })
                            <div class=" alert-danger">
                                @Html.ValidationMessageFor(model => model.email)
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Telephon</label>
                                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { Class = "form-control my-2", placeholder = "Entrer votre num de telephone" } })
                            <div class=" alert-danger">
                                @Html.ValidationMessageFor(model => model.telephone)
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Login</label>
                                @Html.EditorFor(model => model.login, new { htmlAttributes = new { Class = "form-control my-2", placeholder = "choisir une login" } })
                            <div class=" alert-danger">
                                @Html.ValidationMessageFor(model => model.login)
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mot de pass</label>
                                @Html.EditorFor(model => model.mdp, new { htmlAttributes = new { Class = "form-control my-2", placeholder = "choisir une mot de pass",Type="password" } })
                            <div class=" alert-danger">
                                @Html.ValidationMessageFor(model => model.mdp)
                            </div>
                        </div>

                        <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-danger my-2" />
                        </div>

                }
            <div>
                @Html.ActionLink("Already have an account ?Connexion", "Connexion", null, new { Class = "text-white" })
            </div>

            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
