<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <!-- Font Awesome icons (free version)-->
    <script src="~/Scripts/all.js"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet" />
    <!--Font awsome CDN-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <!-- Core theme CSS (includes Bootstrap)-->

    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <header>
        <h1 class="site-heading text-center text-faded d-none d-lg-block">
            <span class="site-heading-upper text-primary mb-3">The Best travel systeme</span>
            <span class="site-heading-lower">Navettes Companie</span>
        </h1>
    </header>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
        <div class="container">
            <a class="navbar-brand text-uppercase fw-bold d-lg-none" href="index.html">Gestion navettes</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto">
                    @if (Session["societe"] != null)
                    {
                        <li class="nav-item px-lg-4">@Html.ActionLink("abonnement", "Index", "EspaceSociete", null, new { Class = "nav-link text-uppercase" })</li>
                        <li class="nav-item px-lg-4">@Html.ActionLink("Nouvel abonnement", "create", "EspaceSociete", null, new { Class = "nav-link text-uppercase" })</li>
                        <li class="nav-item px-lg-4">@Html.ActionLink("Gerer mes autocars", "Index", "autocars", null, new { Class = "nav-link text-uppercase" })</li>
                        <li class="nav-item px-lg-4">@Html.ActionLink("Les demandes", "demandes", "EspaceSociete", null, new { Class = "nav-link text-uppercase" })</li>
                        <li class="nav-item px-lg-4">@Html.ActionLink("Logout", "logout", "Connexion", null, new { @class = "nav-link text-uppercase" })</li>
                    }
                    else
                    {
                        if (Session["abonne"] != null)
                        {
                            <li class="nav-item px-lg-4">@Html.ActionLink("Les offres", "Index", "EspaceAbonnee", null, new { @class = "nav-link text-uppercase" })</li>
                            <li class="nav-item px-lg-4">@Html.ActionLink("Les demandes", "voirTout", "demandes", null, new { @class = "nav-link text-uppercase" })</li>
                            <li class="nav-item px-lg-4">@Html.ActionLink("Mes abonnements", "Abonnements", "EspaceAbonnee", null, new { @class = "nav-link text-uppercase" })</li>
                            <li class="nav-item px-lg-4">@Html.ActionLink("Mes demandes", "Index", "demandes", null, new { @class = "nav-link text-uppercase" })</li>
                            <li class="nav-item px-lg-4">@Html.ActionLink("Logout", "logout", "Connexion", null, new { @class = "nav-link text-uppercase" })</li>
                        }
                        else
                        {
                            if (Session["admin"] != null)
                            {
                                <li class="nav-item px-lg-4">@Html.ActionLink("societes", "Index", "EspaceAdmin", null, new { Class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("abonnes", "abonnes", "EspaceAdmin", null, new { Class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("villes", "Index", "villes", null, new { Class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("demandes", "demandes", "EspaceAdmin", null, new { Class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("abonnements", "abonnements", "EspaceAdmin", null, new { Class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("Logout", "logout", "Connexion", null, new { @class = "nav-link text-uppercase" })</li>

                            }
                            else
                            {
                                <li class="nav-item px-lg-4">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("About", "Index", "About", null, new { @class = "nav-link text-uppercase" })</li>
                                <li class="nav-item px-lg-4">@Html.ActionLink("Connexion", "Connexion", null, new { @class = "nav-link text-uppercase" })</li>
                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="footer text-faded text-center py-5">
        <div class="container"><p class="m-0 small">Copyright &copy; C-navettes 2022</p></div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
